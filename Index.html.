<body>
    <div id="trackingContainer">
        <h1>Fake Package Tracking</h1>
        <p>Enter your tracking code below:</p>
        <input type="text" id="inputCode" placeholder="Enter Tracking Code">
        <button onclick="checkTracking()">Track Package</button>
        <p id="trackingStatus"></p>
    </div>

    <script>
        function checkTracking() {
            var code = document.getElementById('inputCode').value;
            var status = ['Order Received', 'In Transit', 'Out for Delivery', 'Delivered'];
            var randomStatus = status[Math.floor(Math.random() * status.length)];
            document.getElementById('trackingStatus').innerText = `Tracking Code: ${code} - Status: ${randomStatus}`;
        }
    </script>
